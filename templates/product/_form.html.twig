{{ form_start(form, {'attr' : {'novalidate' : 'novalidate'}}) }}
    <div class="row justify-content-evenly mt-4 ms-3 me-5">
        <div class="form-group mb-4">
            {{ form_label(form.name) }}<br>
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mb-4">
            {{ form_label(form.price) }}<br>
            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row justify-content-evenly mt-1 ms-3 me-5">
        <div class="form-group mb-4">
            {{ form_label(form.short_description) }}<br>
            {{ form_widget(form.short_description, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mb-4">
            {{ form_label(form.category) }}<br>
            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="image d-inline-block" id="image_list" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">
            {% for imageForm in form.images %}
                {{ form_row(imageForm.image) }}
                {% if imageForm.image.vars.value is defined and product.images.count > 0 %}
                    <div>
                        <img src="{{ asset('uploads/' ~ imageForm.image.vars.value)  }}" width="100px" height="100px">
                    </div>
                {% endif %}

            {% endfor %}
        </div>
    </div>

    <div class="row justify-content-evenly ms-3">
        <div class="col-12">
            <button class="btn btn-dark mt-lg-3 w-5 mb-3 ">{{ button_label|default('Save') }}</button>
            <a class="btn btn-dark" href="{{ path('app_product_index') }}">Cancel</a>
        </div>
    </div>
{{ form_end(form) }}