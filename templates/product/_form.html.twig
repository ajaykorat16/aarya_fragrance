{{ form_start(form, {'attr' : {'novalidate' : 'novalidate'}}) }}
<div class="tab-content rounded-bottom w-50">
    <div class="tab-pane p-3 active preview">
        <ul class="list-group mb-3">
            <li class="list-group-item list-group-item-secondary">
                <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.short_description) }}
                    {{ form_widget(form.short_description) }}
                </div>
                <div class="form-group">

                {{ form_label(form.price) }}
                {{ form_widget(form.price) }}
                </div>
                <div class="form-group">

                {{ form_label(form.image) }}
                {{ form_widget(form.image) }}
                </div>
                <div class="form-group">
                {% if product.id is not null %}
                <div>
                    <img src="{{ asset('uploads/' ~ product.image)  }}" width="100px" height="100px">
                </div>
                {% endif %}
                </div>
            </li>
        </ul>
        <button class="btn btn-dark mt-lg-3 w-5">{{ button_label|default('Save') }}</button>
    </div>
</div>
{{ form_end(form) }}