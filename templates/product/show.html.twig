{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h3>Product</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Short_description</th>
                <td>{{ product.shortDescription }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Category_id</th>
                <td>{{ product.category.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <div>
                        <img src="{{ asset('uploads/' ~ product.image)  }}" width="100px" height="100px">
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('app_product_index') }}">Back to list</a>

{% endblock %}
