{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}
{% block page_title %}<h3>Products</h3>
{% endblock %}
{% block create %}
    <form action="{{ path('app_product_new') }}">
        <button class="btn btn-primary" type="submit">Create</button>
    </form>
{% endblock %}

{% block body %}
<div class="table-responsive">
    <table class="table border mb-0">
        <thead class="table-dark">
            <tr class="align-middle">
                <th class="text-center">Id</th>
                <th class="text-center">Name</th>
                <th class="text-center">Short_description</th>
                <th class="text-center">Price</th>
                <th class="text-center">Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr class="align-middle">
                <td class="text-center">{{ product.id }}</td>
                <td class="text-center">{{ product.name }}</td>
                <td class="text-center">{{ product.ShortDescription }}</td>
                <td class="text-center">{{ product.price }}</td>
                <td class="text-center">{{ product.image }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}"><i class="fa-solid fa-eye"></i></a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}"><i class="fa-solid fa-pencil"></i></a>
                    <a href="{{ path('app_product_delete', {'id': product.id}) }}"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
