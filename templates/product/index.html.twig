{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}
{% block page_title %}<h3>Products</h3>
{% endblock %}
{% block create %}
    <form action="{{ path('app_product_new') }}">
        <button class="btn btn-dark " type="submit">Create</button>
    </form>
{% endblock %}

{% block body %}
<div class="search-form">
    {{form_start(searchForm)}}
    <div class="row mb-3">
        <div class="col-md-3">
            {{ form_row(searchForm.search) }}
        </div>
        <div class="col">
            {{ form_row(searchForm.submit) }}
        </div>
    </div>
    {{form_end(searchForm)}}
    <a href="{{ path('app_product_index') }}" class="btn btn-dark mb-1">Reset</a>
</div>

<div class="table">
    <table class="table border mb-0">
        <thead class="table-dark">
            <tr class="align-middle">
                <th class="text-center">Id</th>
                <th class="text-center">Name</th>
                <th class="text-center">Description</th>
                <th class="text-center">Price</th>
                <th class="text-center">Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in pagination %}
            <tr class="align-middle">
                <td class="text-center">{{ product.id }}</td>
                <td class="text-center">{{ product.name }}</td>
                <td class="text-center">{{ product.description|length >50 ? product.description|slice(0,40) ~ '...' : product.description}}</td>
                <td class="text-center">{{ product.price }}</td>
                <td class="text-center">{{ product.category.name }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}"><i class="fa-solid text-dark fa-eye"></i></a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}"><i class="fa-solid text-dark fa-pencil"></i></a>
                    <a href="{{ path('app_product_delete', {'id': product.id}) }}"><i class="fa-solid text-dark fa-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col">
            <div class="navigation mt-3 d-flex justify-content-end">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>

</div>
{% endblock %}
