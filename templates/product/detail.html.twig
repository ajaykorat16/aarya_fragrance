{% extends 'frontbase.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}

    <script>
        $(document).ready(function() {
            var carousel = $('#carouselExampleIndicators');

            $('#myCustomButton2').on('click', function() {
                carousel.carousel('next');
            });
            $('#myCustomButton').on('click', function() {
                carousel.carousel('prev');
            });
        });
    </script>

    <div class="container">
        <div class="d-flex justify-content-center mb-3" style="height: 50vh">
            <div id="carouselExampleIndicators" class="carousel slide w-100 " data-ride="carousel">
                <div class="carousel-inner">
                    {% set isFirstImage = true %}
                    {% for images in image %}
                        {% if images.product.id == product.id %}
                            <div class="carousel-item {% if isFirstImage %}active{% endif %} ">
                                <div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
                                    <img src="{{ asset('uploads/' ~ images.imageName) }}" class="d-block w-25">
                                </div>
                            </div>
                            {% set isFirstImage = false %}
                        {% endif %}
                    {% endfor %}
                </div>
                <a class="left carousel-control" id="myCustomButton" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" id="myCustomButton2" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div>
            <p class="mb-3">
                <strong>Name:</strong>
                {{ product.name }}
            </p>
            <p class="mb-3">
                <strong>Price:</strong>
                {{ product.price }}
            </p>
            <p class="mb-3">
                <strong>Category:</strong>
                {{ product.category.name }}
            </p>
            <p class="mb-3 text-justify">
                <strong>Description:</strong>
                {{ product.description }}
            </p>
        </div>
    </div>

{% endblock %}
