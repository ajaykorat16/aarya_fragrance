{% extends 'frontbase.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}

    <script>
        $(document).ready(function() {
            var carousel = $('#carouselExampleIndicators');

            $('#myCustomButton2').on('click', function() {
                carousel.carousel('next');
            });
            $('#myCustomButton').on('click', function() {
                carousel.carousel('prev');
            });
        });
    </script>

    <div class="container">
        <div class="d-flex justify-content-center mb-3" style="height: 50vh">
            <div id="carouselExampleIndicators" class="carousel slide w-100 " data-ride="carousel">
                <div class="carousel-inner">
                    {% set isFirstImage = true %}
                    {% for images in image %}
                        {% if images.product.id == product.id %}
                            <div class="carousel-item {% if isFirstImage %}active{% endif %} ">
                                <div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
                                    <img src="{{ asset('uploads/' ~ images.imageName) }}" class="d-block w-25">
                                </div>
                            </div>
                            {% set isFirstImage = false %}
                        {% endif %}
                    {% endfor %}
                </div>
                <a class="left carousel-control" id="myCustomButton" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" id="myCustomButton2" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div>
            <div class="row mb-3">
                <div class="col font-weight-bold">Name</div>
                <div class="col">{{ product.name }}</div>
            </div>
            <div class="row mb-3">
                <div class="col font-weight-bold">Price</div>
                <div class="col">{{ product.price }}</div>
            </div>
            <div class="row mb-3">
                <div class="col font-weight-bold">Category</div>
                <div class="col">{{ product.category.name }}</div>
            </div>
            <div class="row mb-3">
                <div class="col font-weight-bold">Description</div>
                <div class="col">{{ product.description }}</div>
            </div>
        </div>
    </div>

{% endblock %}
